pragma solidity ^0.8.18;

import {Test} from "forge-std/Test.sol";
import {DeployMoodNft} from "../../script/DeployMoodNft.s.sol";
import {MoodNft} from "../../src/MoodNft.sol";
import {console} from "forge-std/console.sol";

contract MoodSvgTest is Test {
    DeployMoodNft public deployer;
    MoodNft public moodSvg;

    string public constant HAPPY_MOOD_URI =
        "data:application/json;base64,";

    string public constant SAD_MOOD_URI =
        "data:application/json;base64,";

    address public USER = makeAddr("user");

    function setUp() public {
        deployer = new DeployMoodNft();
        moodSvg = deployer.run();
    }

    function testFlipMoodToSad() public {
        vm.prank(USER);
        moodSvg.mintNft();

        vm.prank(USER);
        moodSvg.flipMood(0);
        assert(keccak256(abi.encodePacked(moodSvg.tokenURI(0))) == keccak256(abi.encodePacked(SAD_MOOD_URI)));
    }
}
